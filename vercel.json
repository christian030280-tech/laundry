{
    "version": 2,
    "builds": [
        { "src": "api/index.php", "use": "@vercel/php" },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "public" }
        }
    ],
    "routes": [
        {
            "src": "/(.*\\.(css|js|png|jpg|ico|svg|map))$",
            "dest": "/public/$1"
        },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ]
}
